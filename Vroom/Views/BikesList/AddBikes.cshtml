@model Vroom.Models.BikeModel
@{
    ViewData["Title"] = "indexBikelist";
}


<div class="row">
    <div class="col-7 bg-dark text-white">
        <h1 class="text-center">Add New Brand Bikes</h1>
        <form method="post">

            <div class=" form-group">
                <label asp-for="Name">Enter BikeName</label>
                <input asp-for="Name" class="form-control" autocomplete="off" />
                <span asp-validation-for="Name" class="text-danger"></span>

            </div>
            <div class=" form-group">
                <label asp-for="ModelName">Choose Model</label>
                <select asp-for="ModelName" class="form-control" asp-items="ViewBag.ListOfModel">
                  <option value=""> Select Model Name</option>

                </select>
                <span asp-validation-for="ModelName" class="text-danger"></span>
            </div>

            <div class=" form-group">
                <label asp-for="Description">Description</label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>
           
            <div class="form-group">

                <input type="submit" class="btn-primary " value="Save" />
                <h4>@TempData["Message"] </h4>
            </div>
        </form>
    </div>
    <div class="col-5">

        <h1>Index page</h1>
    </div>
</div>